{
  "host": "0.0.0.0",
  "port": 9999,
  "localKeysDir": "/absolute/path/to/.drawlatch/keys/remote",
  "rateLimitPerMinute": 60,
  "connectors": [
    {
      "alias": "internal-api",
      "name": "Internal Admin API",
      "description": "Custom connector example â€” scopes secrets and headers to endpoint patterns",
      "allowedEndpoints": ["https://admin.internal.com/**"],
      "headers": { "Authorization": "Bearer ${ADMIN_KEY}" },
      "secrets": { "ADMIN_KEY": "${INTERNAL_ADMIN_KEY}" }
    }
  ],
  "callers": {
    "my-laptop": {
      "name": "Personal Laptop",
      "peerKeyDir": "/absolute/path/to/.drawlatch/keys/peers/my-laptop",
      "connections": ["github", "stripe", "internal-api"]
    },
    "ci-server": {
      "name": "GitHub Actions CI",
      "peerKeyDir": "/absolute/path/to/.drawlatch/keys/peers/ci-server",
      "connections": ["github"]
    },
    "alice": {
      "name": "Alice (per-caller env override example)",
      "peerKeyDir": "/absolute/path/to/.drawlatch/keys/peers/alice",
      "connections": ["github"],
      "env": {
        "GITHUB_TOKEN": "${ALICE_GITHUB_TOKEN}"
      }
    },
    "team-member": {
      "name": "Team Member (ingestor override example)",
      "peerKeyDir": "/absolute/path/to/.drawlatch/keys/peers/team-member",
      "connections": ["discord-bot"],
      "ingestorOverrides": {
        "discord-bot": {
          "guildIds": ["1234567890"],
          "channelIds": ["9876543210"],
          "eventFilter": ["MESSAGE_CREATE", "MESSAGE_UPDATE", "MESSAGE_DELETE"]
        }
      }
    }
  }
}
