{
  "name": "mcp-secure-proxy",
  "version": "1.0.0",
  "description": "Encrypted MCP proxy with mutual authentication. Local MCP server forwards requests through an encrypted channel to a remote secrets-holding server.",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev:remote": "tsx src/remote-server.ts",
    "dev:mcp": "tsx src/mcp-server.ts",
    "setup": "tsx src/cli/setup.ts",
    "generate-keys": "tsx src/cli/generate-keys.ts",
    "start:remote": "node dist/remote-server.js",
    "start:mcp": "node dist/mcp-server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "security",
    "proxy",
    "encryption",
    "secrets"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "express": "^5.2.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.2",
    "@vitest/coverage-v8": "^4.0.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
